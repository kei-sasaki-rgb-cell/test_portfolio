<div class="contents row">
    <%= form_with url: "/chats", method: :chat,id: "form" do |form| %>
      <%= form.text_area :text, placeholder: "text", rows: "10" %>
      <%= form.text_field :content  , id: "content"%>
      <%= form.submit '投稿する' , id: "submit" %>
    <% end %>

    <div id="list">
    </div>

  <% @chats.each do |chat| %>
    <%#div class="content_post" style="background-image: url(<%= chat.image %><%#);"%>
    <div class="content_post" style="background-image: url(<%= chat.text %>);">
      <p><%= chat.text %></p>
      <span class="name">
        <%= chat.name %>
      </span>
    </div>
  <% end %>
</div>